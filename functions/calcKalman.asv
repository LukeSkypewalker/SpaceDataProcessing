function [ Xk, SigmaX ] = calcKalman(X, sigmaA, sigmaN, x1, v1, F, G, H, bias )
  
    n=length(X);
   
    Xk = zeros(2, n);
    Xk(:, 1) = [x1; v1];

    Q=sigmaA^2 * (G*G');
    P=[10000, 0; 0, 10000];
    SigmaX = zeros(1,n);
    SigmaX(1) = P(1,1);
    
    for i=2:n
        P=F*P*F'+Q;
        K=P*H'/(H*P*H'+ sigmaN^2);
        Xk(:,i) = F*Xk(:, i-1) + G*bias;
        Xk(:,i) = Xk(:,i)+K*(Z(i)-H*Xk(:,i));

        P = (eye(2)-K*H)*P;
        SigmaX(i) = sqrt(P(1,1));
    end

end

